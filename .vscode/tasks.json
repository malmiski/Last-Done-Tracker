{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "start-expo-web",
            "type": "shell",
            "command": "cd ActivityTracker && npm install && npx expo start --web",
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "DONE  Compiled successfully in",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Starting the development server...",
                    "endsPattern": "DONE  Compiled successfully in"
                }
            }
        }
    ]
}